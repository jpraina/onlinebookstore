pipeline {
    agent any

    stages {
        stage('clone') {
            steps {
                git branch: 'main', url: 'https://github.com/raghudeveloptrees/onlinebookstore.git'
            }
        }
        stage('build') {
            steps {
                sh 'mvn clean package'
            }
        }
        stage('deploy') {
            steps {
                deploy adapters: [tomcat9(credentialsId: '7e432c50-e893-4f84-89ae-a28cd27eeaae', path: '', url: 'http://13.234.115.37:8081/')], contextPath: 'bookstore3', war: '**/*.war'
            }
        }
    }
}
